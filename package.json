{
    "name": "browserify-bundler",
    "version": "1.0.0",
    "description": "A browserify bundler for csafe",
    "author": "Christian Nagel",
    "main": "main.js",
    "dependencies": {
        "@types/aes-js": "^3.1.0",
        "@types/node": "^12.7.11",
        "@types/qrcode": "^1.3.4",
        "aes-js": "^3.1.2",
        "browserify-css": "^0.15.0",
        "babel-preset-es2015": "^6.24.1",
        "qrcode": "^1.4.2",
        "tsify": "^4.0.1",
        "typescript": "^3.6.3",
        "uglify-js": "^3.6.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babelify": "^8.0.0"
    },
    "scripts": {
        "build-js": "browserify main.js --s module >  dist/bundle.js",
        "build-ts": "browserify main.ts -p [ tsify --noImplicitAny --downlevelIteration ] --s module > dist/csafeBundle.js",
        "minify": "uglifyjs dist/bundle.js --output dist/minifiedBundle.js"
    },
    "browserify": {
        "transform": [
            [
                "babelify",
                {
                    "presets": [
                        "es2015"
                    ]
                }
            ]
        ]
    }
}
